<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_over_book"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="14dp">

    <TextView
        android:id="@+id/tv_over_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="完结榜"
        android:textColor="#FF222222"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_more_over_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多 >"
        android:textColor="#FF999999"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_over_book_title"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_over_book_book1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_over_book_title">

        <ImageView
            android:id="@+id/iv_over_book_cover1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_book_default"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/tv_over_book_book_title1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FF222222"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_over_book_author1"
            app:layout_constraintLeft_toRightOf="@+id/iv_over_book_cover1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_over_book_author1"
            app:layout_constraintTop_toTopOf="@+id/iv_over_book_cover1" />

        <TextView
            android:id="@+id/tv_over_book_author1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#FF999999"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_over_book_book_des"
            app:layout_constraintLeft_toLeftOf="@+id/tv_over_book_book_title1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_over_book_book_title1" />

        <TextView
            android:id="@+id/tv_over_book_book_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#FF666666"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_over_book_cover1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_over_book_author1"
            app:layout_constraintTop_toBottomOf="@+id/tv_over_book_author1" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_over_book_book2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="17dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_over_book_book1"
        app:layout_constraintWidth_percent="0.2">

        <ImageView
            android:id="@+id/iv_over_book_cover2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_book_default"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_over_book_book_title2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FF333333"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_over_book_cover2" />

        <TextView
            android:id="@+id/tv_over_book_author2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FFADADAD"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_over_book_book_title2" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_over_book_book3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="17dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/layout_over_book_book2"
        app:layout_constraintRight_toLeftOf="@id/layout_over_book_book4"
        app:layout_constraintTop_toBottomOf="@+id/layout_over_book_book1"
        app:layout_constraintWidth_percent="0.2">

        <ImageView
            android:id="@+id/iv_over_book_cover3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_book_default"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_over_book_book_title3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FF333333"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_over_book_cover3" />

        <TextView
            android:id="@+id/tv_over_book_author3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FFADADAD"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_over_book_book_title3" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_over_book_book4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintLeft_toRightOf="@+id/layout_over_book_book3"
        app:layout_constraintRight_toLeftOf="@+id/layout_over_book_book5"
        app:layout_constraintTop_toTopOf="@+id/layout_over_book_book2"
        app:layout_constraintWidth_percent="0.2">

        <ImageView
            android:id="@+id/iv_over_book_cover4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_book_default"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_over_book_book_title4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FF333333"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_over_book_cover4" />

        <TextView
            android:id="@+id/tv_over_book_author4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FFADADAD"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_over_book_book_title4" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_over_book_book5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_over_book_book2"
        app:layout_constraintWidth_percent="0.2">

        <ImageView
            android:id="@+id/iv_over_book_cover5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_book_default"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_over_book_book_title5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FF333333"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_over_book_cover5" />

        <TextView
            android:id="@+id/tv_over_book_author5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FFADADAD"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_over_book_book_title5" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
