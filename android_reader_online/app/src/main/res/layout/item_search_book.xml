<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_common_bg">

    <ImageView
        android:id="@+id/search_book_iv_cover"
        android:layout_width="47dp"
        android:layout_height="63dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_book_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#FF222222"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/search_book_tv_brief"
        app:layout_constraintLeft_toRightOf="@+id/search_book_iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_book_iv_cover"
        tools:text="武侠世界自由行" />

    <TextView
        android:id="@+id/search_book_tv_brief"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/search_book_brief"
        android:textColor="#FF999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/search_book_iv_cover"
        app:layout_constraintLeft_toLeftOf="@+id/search_book_tv_name"
        app:layout_constraintRight_toRightOf="@+id/search_book_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/search_book_tv_name" />
</android.support.constraint.ConstraintLayout>