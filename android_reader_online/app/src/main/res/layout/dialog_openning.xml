<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_openning"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/main_bg_op_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent="0.85" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/main_ic_close"
        app:layout_constraintEnd_toEndOf="@+id/iv_openning"
        app:layout_constraintStart_toStartOf="@+id/iv_openning"
        app:layout_constraintTop_toBottomOf="@+id/iv_openning" />

</android.support.constraint.ConstraintLayout>